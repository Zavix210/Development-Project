<Page x:Class="SceneBuilderWpf.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SceneBuilderWpf"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="960"
      Title="MainPage"
      DataContext="{Binding MainPageModel, Source={StaticResource ViewModelLocator}}">

    <Page.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FFA03838" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    
    <Grid>
        <Button Content="scene Page" Command="{Binding ChangePagCommand}" Margin="47,343,672,52"></Button>
    </Grid>
</Page>
